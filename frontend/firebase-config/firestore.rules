rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read and write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can read and write their own chat messages
    match /chats/{chatId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid in resource.data.participants);
    }
    
    // Users can read and write their own bookings
    match /bookings/{bookingId} {
      allow read, write: if request.auth != null && 
        resource.data.userId == request.auth.uid;
    }
    
    // Users can read public hotel data
    match /hotels/{hotelId} {
      allow read: if request.auth != null;
      allow write: if false; // Only admins can write hotel data
    }
    
    // Users can read their own travel preferences
    match /travel_preferences/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Travel plans - users can only access their own plans
    match /travelPlans/{planId} {
      allow read, write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         request.auth.uid == planId.split('_')[0]);
    }
    
    // Travel expenses - users can only access expenses for their plans
    match /travelExpenses/{expenseId} {
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.planId.split('_')[0];
    }
    
    // Travel recommendations - public read, authenticated write
    match /travelRecommendations/{recId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // User reviews - authenticated users can read, only author can write
    match /reviews/{reviewId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         !exists(/databases/$(database)/documents/reviews/$(reviewId)));
    }
  }
}
