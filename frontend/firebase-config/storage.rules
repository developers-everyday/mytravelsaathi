rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Users can upload and manage their own profile pictures
    match /users/{userId}/profile/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload travel documents (passport, visa, etc.)
    match /users/{userId}/documents/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can upload trip photos
    match /users/{userId}/trips/{tripId}/{fileName} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
